<h1><%= @article.title %></h1>

<p>
	<%= @article.text %>
</p>

<h2>Comments:</h2>

<% @article.comments.each do |comment| %>
	<p>
	<i><%= comment.author %> said:</i><br>
	<%= comment.body %>
	</p>
<% end %>

<h2>Add comment:</h2>
<div class="form-group">
	<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<p>	
			<%= f.label :author%><br>
			<%= f.text_field :author, :class => 'form-control' %>
		</p>
		<p>	
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit :class => 'btn btn-success'  %>
		</p>
	</p>
	<% end %>
</div>
